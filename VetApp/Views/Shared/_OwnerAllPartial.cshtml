@{
	ViewData["Title"] = "All Owners";
}

<div class="col mb-2">
	<div class="card border-secondary" style="max-width: 25rem; margin: 10px 0px">
		<h4 class="card-header">@Model.Name</h4>
		<div class="card-body">
			<dl class="row">
				<dt class="col-sm-5 card-title">Address:</dt>
				<dd class="col-sm-5 card-text">@Model.Address</dd>

				<dt class="col-sm-5 card-title">PhoneNumber:</dt>
				<dd class="col-sm-5 card-text">@Model.PhoneNumber</dd>

				@if (Model.Email != null)
				{
					<dt class="col-sm-5 card-title">Email:</dt>
					<dd class="col-sm-5 card-text">@Model.Email</dd>
				}
			</dl>
			<a class="btn btn-outline-primary text-white" asp-controller="Patient" asp-action="AddPet" asp-route-ownerId="@Model.Id">Add Pet</a>
			<a class="btn btn-outline-info text-white" asp-controller="Owner" asp-action="Details" asp-route-ownerId="@Model.Id">Details</a>
			<a class="btn btn-outline-warning text-white" asp-controller="Owner" asp-action="Edit" asp-route-ownerId="@Model.Id">Edit</a>
		</div>
	</div>
</div>
