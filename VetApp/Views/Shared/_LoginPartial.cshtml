@using System.Security.Claims
@using VetApp.Services.Interfaces
@inject SignInManager<VetUser> signInManager
@inject IAccountService accService

@{
	string id = User.FindFirstValue(ClaimTypes.NameIdentifier);
	string userFullName = await this.accService.GetUserFullNameByEmail(User.Identity?.Name!);
}

<ul class="navbar-nav">
	@if (signInManager.IsSignedIn(User))
	{
		<li class="nav-item dropdown">
			<a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" area-expanden="false">
				@userFullName @* - <span> @id </span> *@
			</a>
			<ul class="dropdown-menu" aria-labelledby="navbarDropdown">
				<li>
					<a class="dropdown-item" asp-action="Logout" asp-controller="Account">
						Logout
					</a>
				</li>
			</ul>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
		</li>
	}
</ul>
