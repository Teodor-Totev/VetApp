@{
	ViewData["Title"] = "All Patients";
}

@foreach (var patient in Model)
{
	<tr class="table-dark">
		<td>
			@patient.Name
		</td>
		<td>
			@patient.Type
		</td>
		<td>
			@if (patient.BirthDate != null)
			{
				@patient.BirthDate.ToString("dd.MM.yyyy")
			}
		</td>
		<td>
			@patient.Gender
		</td>
		<td>
			@patient.Neutered
		</td>
		<td>
			<a class="btn btn-outline-primary text-white" asp-controller="Examination" asp-action="Add" asp-route-patientId="@patient.Id">Add Examination</a>
		</td>
		<td>
			<a class="btn btn-outline-warning text-white" asp-controller="Patient" asp-action="Edit" asp-route-id="@patient.Id">Edit</a>
		</td>
		<td>
			<a class="btn btn-outline-info text-white" asp-controller="Patient" asp-action="Details" asp-route-patientId="@patient.Id">Details</a>
		</td>
	</tr>
}
