@model AddAndEditExaminationViewModel

@{
	ViewData["Title"] = "Edit Examination";
	string examinationId = ViewBag.ExaminationId;
	string doctorFullName = ViewBag.DoctorFullName;
}

<div class="row">
	<div class="col-4">
		<partial name="_PatientDetailsPartial" model="@Model.Patient" />
	</div>
	<div class="col-8">
		<div class="card border-secondary mb-3" style="margin: 10px 0px">
			<h4 class="card-header">@ViewData["Title"]</h4>
			<form asp-action="Edit" asp-controller="Examination" asp-route-examinationId="@examinationId" asp-route-patientId="@Model.Patient!.Id" method="post">
				<div class="card-body pb-0">
					<div class="row">
						<div class="col-6 col-lg-4 col-xl-4">

							<dl>
								<dt>Doctor:</dt>
								<dd>@doctorFullName</dd>
								<input type="hidden" asp-for="@Model.Examination.DoctorId" value="@Model.Examination.DoctorId" />
							</dl>

							<div class="mb-1">
								<label asp-for="@Model.Examination.Weight" class="control-label"></label>
								<input asp-for="@Model.Examination.Weight" class="form-control">
								<span asp-validation-for="@Model.Examination.Weight" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="@Model.Examination.Reason" class="control-label"></label>
								<input asp-for="@Model.Examination.Reason" class="form-control">
								<span asp-validation-for="@Model.Examination.Reason" class="text-danger"></span>
							</div>


							<div class="mb-1">
								<label asp-for="@Model.Examination.CurrentCondition" class="control-label">Current condition</label>
								<input asp-for="@Model.Examination.CurrentCondition" class="form-control">
								<span asp-validation-for="@Model.Examination.CurrentCondition" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="@Model.Examination.SpecificCondition" class="control-label">Specific condition</label>
								<input asp-for="@Model.Examination.SpecificCondition" class="form-control">
								<span asp-validation-for="@Model.Examination.SpecificCondition" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="@Model.Examination.Research" class="control-label"></label>
								<input asp-for="@Model.Examination.Research" class="form-control">
								<span asp-validation-for="@Model.Examination.Research" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="@Model.Examination.CreatedOn" class="control-label"></label>
								<input asp-for="@Model.Examination.CreatedOn" class="form-control">
								<span asp-validation-for="@Model.Examination.CreatedOn" class="text-danger"></span>
							</div>

						</div>

						<div class="col-6 col-lg-8 col-xl-8">

							<div class="mb-1">
								<label asp-for="@Model.Examination.MedicalHistory" class="control-label">Medical history</label>
								<textarea asp-for="@Model.Examination.MedicalHistory" class="form-control" rows="2"></textarea>
								<span asp-validation-for="@Model.Examination.MedicalHistory" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="@Model.Examination.Diagnosis" class="control-label"></label>
								<textarea asp-for="@Model.Examination.Diagnosis" class="form-control" rows="2"></textarea>
								<span asp-validation-for="@Model.Examination.Diagnosis" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="@Model.Examination.Surgery" class="control-label"></label>
								<textarea asp-for="@Model.Examination.Surgery" class="form-control" rows="2"></textarea>
								<span asp-validation-for="@Model.Examination.Surgery" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="@Model.Examination.Therapy" class="control-label"></label>
								<input asp-for="@Model.Examination.Therapy" class="form-control">
								<span asp-validation-for="@Model.Examination.Therapy" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="@Model.Examination.Exit" class="control-label"></label>
								<input asp-for="@Model.Examination.Exit" class="form-control">
								<span asp-validation-for="@Model.Examination.Exit" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="@Model.Examination.StatusId" class="form-label">Status</label>
								<select asp-for="@Model.Examination.StatusId" class="form-control">
									@foreach (var status in Model.Examination.Statuses)
									{
										<option value="@status.Id">@status.Name</option>
									}
								</select>
								<span asp-validation-for="@Model.Examination.StatusId" class="text-danger"></span>
							</div>

						</div>
					</div>
				</div>
				<div class="card-footer d-flex align-items-center justify-content-end">
					<button type="submit" class="btn btn-primary btn-sm">Save</button>
				</div>
			</form>
		</div>
	</div>
</div>



@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}

