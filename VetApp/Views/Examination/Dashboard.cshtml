@model Dictionary<string, List<ExaminationDashboardVM>>

@{
    ViewData["Title"] = "Doctor Dashboard";
}

<h2>Welcome, Doctor!</h2>

<div class="row">
    @foreach (var statusGroup in Model)
    {
        <div class="col-md-4">
            <h3>@statusGroup.Key</h3>
            <ul class="list-group">
                @foreach (var examination in statusGroup.Value)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        @examination.DoctorName | @examination.PatientName - @examination.PatientType
                        <a class="btn btn-primary btn-sm" asp-action="Details" asp-controller="Patient" asp-route-id="@examination.PatientId">Details</a>
                    </li>
                }
            </ul>
        </div>
    }
</div>
