@model PatientExaminationVM

@{
	ViewData["Title"] = "All Examinations";
}

@if (Model.Examinations.Any())
{
	<table class="table table-secondary">
		<thead>
			<tr>
				<th>
					Created On
				</th>
				<th>
					Weight
				</th>
				<th>
					Reason
				</th>
				<th>
					Doctor
				</th>
				<th>
					Diagnosis
				</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var examination in Model.Examinations)
			{
				<tr class="table-dark">
					<td>
						@Html.DisplayFor(modelItem => examination.CreatedOn)
					</td>
					<td>
						@Html.DisplayFor(modelItem => examination.Weight)
					</td>
					<td>
						@Html.DisplayFor(modelItem => examination.Reason)
					</td>
					<td>
						@Html.DisplayFor(modelItem => examination.DoctorName)
					</td>
					<td>
						@Html.DisplayFor(modelItem => examination.Diagnosis)
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<h3 class="text-center">No examinations yet!</h3>
}
<a class="btn btn-primary text-white d-block" asp-controller="Examination" asp-action="Add" asp-route-patientId="@Model.Id">Add</a>
