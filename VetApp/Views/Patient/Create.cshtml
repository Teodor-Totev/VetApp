@model CreateVM

@{
	ViewData["Title"] = "Create Patient";
}

<div class="card border-secondary mb-3" style="margin: 10px 0px">
	<h4 class="card-header text-center">Create Patient</h4>
	<form asp-action="Create" asp-controller="Patient" method="post">
		<div class="card-body">
			<table class="table table-secondary">
				<thead>
					<tr>
						<th scope="col">Patient Information</th>
						<th scope="col">Owner Information</th>
					</tr>
				</thead>
				<tbody>
					<tr class="table-dark">
						<td>
							<div class="mb-1">
								<label asp-for="Name" class="control-label"></label>
								<input asp-for="Name" class="form-control" placeholder="Name">
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="Type" class="control-label"></label>
								<input asp-for="Type" class="form-control" placeholder="Type">
								<span asp-validation-for="Type" class="text-danger"></span>
							</div>

							<div class="mb-1">
								Male
								@Html.RadioButtonFor(model => model.Gender, "Male")
								Female
								@Html.RadioButtonFor(model => model.Gender, "Female")
								<span asp-validation-for="Gender" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="BirthDate" class="control-label"></label>
								<input asp-for="BirthDate" class="form-control">
								<span asp-validation-for="BirthDate" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="Neutered" class="text-center" style="margin-right:5px">Neutered: </label>
								<br />
								Yes
								@Html.RadioButtonFor(model => model.Neutered, "Yes")
								No
								@Html.RadioButtonFor(model => model.Neutered, "No")
								Homeless
								@Html.RadioButtonFor(model => model.Neutered, "Homeless")
								<span asp-validation-for="Neutered" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="Microchip" class="control-label"></label>
								<input asp-for="Microchip" class="form-control" placeholder="Microchip">
								<span asp-validation-for="Microchip" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="Characteristics" class="control-label"></label>
								<textarea asp-for="Characteristics" class="form-control" rows="2" placeholder="Characteristics"></textarea>
								<span asp-validation-for="Characteristics" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="ChronicIllnesses" class="control-label"></label>
								<textarea asp-for="ChronicIllnesses" class="form-control" rows="2" placeholder="ChronicIllnesses"></textarea>
								<span asp-validation-for="ChronicIllnesses" class="text-danger"></span>
							</div>
						</td>
						<td>
							<div class="mb-1">
								<label asp-for="OwnerName" class="control-label"></label>
								<input asp-for="OwnerName" class="form-control" placeholder="Name">
								<span asp-validation-for="OwnerName" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="OwnerEmail" class="control-label">Email</label>
								<input asp-for="OwnerEmail" class="form-control" placeholder="Email">
								<span asp-validation-for="OwnerEmail" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="OwnerPhoneNumber" class="control-label"></label>
								<input asp-for="OwnerPhoneNumber" class="form-control" placeholder="Phone Number">
								<span asp-validation-for="OwnerPhoneNumber" class="text-danger"></span>
							</div>

							<div class="mb-1">
								<label asp-for="OwnerAddress" class="control-label"></label>
								<input asp-for="OwnerAddress" class="form-control" placeholder="Address">
								<span asp-validation-for="OwnerAddress" class="text-danger"></span>
							</div>
						</td>
				</tbody>
			</table>
		</div>
		<div class="card-footer d-flex align-items-center justify-content-end">
			<button type="submit" class="btn btn-primary btn-sm">Create</button>
		</div>
	</form>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
