<div class="row">
	<div class="col-md-6">
		<h2>Owner Information</h2>

		<form asp-action="Create" method="post">
			<div class="form-group">
				<label asp-for="OwnerName"></label>
				<input asp-for="OwnerName" class="form-control" />
				<span asp-validation-for="OwnerName" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="OwnerAddress"></label>
				<input asp-for="OwnerAddress" class="form-control" />
				<span asp-validation-for="OwnerAddress" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="OwnerPhoneNumber"></label>
				<input asp-for="OwnerPhoneNumber" class="form-control" />
				<span asp-validation-for="OwnerPhoneNumber" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="OwnerEmail"></label>
				<input asp-for="OwnerEmail" class="form-control" />
				<span asp-validation-for="OwnerEmail" class="text-danger"></span>
			</div>
		</form>
	</div>

	<div class="col-md-6">
		<h2>Patient Information</h2>

		<form asp-action="Create" method="post">
			<div class="form-group">
				<label asp-for="Name"></label>
				<input asp-for="Name" class="form-control" />
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>

			<!-- Other patient form inputs omitted for brevity -->
			<div class="form-group">
				<label asp-for="Type"></label>
				<input asp-for="Type" class="form-control" />
				<span asp-validation-for="Type" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Age"></label>
				<input asp-for="Age" class="form-control" type="date" />
				<span asp-validation-for="Age" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="MicroChip"></label>
				<input asp-for="MicroChip" class="form-control" />
				<span asp-validation-for="MicroChip" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Gender"></label>
				<select asp-for="Gender" class="form-control" asp-items="@(new SelectList(Model.Genders))">
					<option value="">-- Select Gender --</option>
				</select>
				<span asp-validation-for="Gender" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Characteristics"></label>
				<input asp-for="Characteristics" class="form-control" />
				<span asp-validation-for="Characteristics" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="ChronicIllnesses"></label>
				<input asp-for="ChronicIllnesses" class="form-control" />
				<span asp-validation-for="ChronicIllnesses" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Neutered"></label>
				<div>
					@foreach (var neuteredOption in Model.Neutereds)
					{
						<div class="form-check form-check-inline">
							<input class="form-check-input" type="radio" asp-for="Neutered" value="@neuteredOption">
							<label class="form-check-label">@neuteredOption</label>
						</div>
					}
					<span asp-validation-for="Neutered" class="text-danger"></span>
				</div>
			</div>

			<button type="submit" class="btn btn-primary">Create</button>
		</form>
	</div>
</div>



